{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    "no-unused-vars": "warn",
    "no-debugger": "warn",
    "indent": ["warn", 2],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-console": "off",
    "prefer-arrow-callback": ["warn"],
    "no-undef": "warn",
    "no-irregular-whitespace": "off"
  }
}
